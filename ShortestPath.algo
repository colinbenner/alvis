paintPath(Vertex Queue Q, Vertex U, Vertex S) {
	U.color = "orange";
	while !Q.isEmpty():
		Q.dequeue(),
	U = U.parentId;
	while U != S: {
		U.color = "green",
		U = U.parentId;
	}
}

